<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dsuappacademy.fituup.MainActivity">


    <TextView
        android:layout_width="160dp"
        android:layout_height="46dp"
        android:text="Biography"
        android:textSize="24sp"
        android:layout_gravity="center_vertical"
        android:id="@+id/bio"
        android:layout_marginBottom="60dp"
        android:layout_above="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"/>

    <ImageView
        android:layout_width="327dp"
        android:layout_height="227dp"
        android:id="@+id/picture"
        android:src="@drawable/djexample"
        android:layout_gravity="left"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_above="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whats going on, my name is Chris Worsley,and I go by the name DJ CRANK. Im from Philadelphia, PA and been a DJ for 4 years. DJing is a heavy Passion of mine and also a professional business for me. (example)"
        android:textSize="18sp"
        android:layout_gravity="top"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="142dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/textView4" />


</RelativeLayout>
